{% set ns = namespace(found=false) %}
{% set ns.host_dynamic_network = false %}
{% for interface in interfaces %}
{% if interface.host_network == true %}
{% set ns.host_dynamic_network = true %}
{% endif %}
{% endfor %}
set interfaces ethernet eth0 address 'dhcp'
{% for interface in interfaces %}
set interfaces {{ interface.type }} {{ interface.name }} address '{{ interface.ip }}'
set interfaces {{ interface.type }} {{ interface.name }} address '{{ interface.ip6 }}'
{% if interface.host_network == true %}
set service router-advert interface {{ interface.name }} prefix {{ interface.ip6 | ansible.netcommon.ipaddr('network/prefix') }}
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} authoritative
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} subnet {{ interface.ip | ansible.netcommon.ipaddr('network/prefix') }}
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} subnet {{ interface.ip | ansible.netcommon.ipaddr('network/prefix') }} default-router {{ interface.ip | ansible.netcommon.ipaddr('address') }}
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} subnet {{ interface.ip | ansible.netcommon.ipaddr('network/prefix') }} dns-server {{ interface.ip | ansible.netcommon.ipaddr('address') }}
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} subnet {{ interface.ip | ansible.netcommon.ipaddr('network/prefix') }} range 0 start {{ interface.ip | ansible.netcommon.ipmath(1) }}
set service dhcp-server shared-network-name dhcp_group_{{ loop.index }} subnet {{ interface.ip | ansible.netcommon.ipaddr('network/prefix') }} range 0 stop {{ interface.ip | ansible.netcommon.ipmath(126) }}
{% endif %}
{% endfor %}
set protocols bgp {{ bgp_asn }} address-family ipv4-unicast redistribute connected
set protocols bgp {{ bgp_asn }} address-family ipv6-unicast redistribute connected
{% for neighbor in bgp_neighbors %}
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip }} description {{ neighbor.description }}
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip }} peer-group 'V4'
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip }} remote-as '{{ neighbor.asn }}'
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip6 }} description {{ neighbor.description }}
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip6 }} peer-group 'V6'
set protocols bgp {{ bgp_asn }} neighbor {{ neighbor.ip6 }} remote-as '{{ neighbor.asn }}'
{% endfor %}
set protocols bgp {{ bgp_asn }} parameters default no-ipv4-unicast
set protocols bgp {{ bgp_asn }} peer-group V4 address-family ipv4-unicast
set protocols bgp {{ bgp_asn }} peer-group V6 address-family ipv6-unicast
